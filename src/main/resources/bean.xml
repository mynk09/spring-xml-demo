<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="jack"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="30"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="amy"></constructor-arg>
        <constructor-arg name="gender" value="Female"></constructor-arg>
        <constructor-arg name="age" value="25"></constructor-arg>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Alom"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="24"></constructor-arg>
    </bean>
    <bean name="movie1, movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
</beans>